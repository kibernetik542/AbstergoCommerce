
@{
    Layout = null;
}

<!DOCTYPE html>
<html lang="en">
    <head>
        <meta charset="utf-8" />
        <title>Zeon</title>
        <meta name="description" content="Here goes description" />
        <meta name="author" content="author name" />
        <link rel="shortcut icon" href="/Content/Zeon/images/favicon.ico" type="image/x-icon" />
        <meta name="viewport" content="width=device-width, initial-scale=1, maximum-scale=1" />
        <link rel="stylesheet" href="/Content/Zeon/css/bootstrap.css" />    
        <link rel="stylesheet" href="/Content/Zeon/css/style.css" />
    </head>

<body class="home-blog-show">

    <div class="header">
        <div class="container">
         
            <div class="header-middle-info">
                <div class="col-md-4">
                    <div class="logo">
                        <a href="/Home/Index">
                            <img src="~/Content/PhyDetail-LocationWebsiteIcon.png" />
                        </a>
                    </div>
                </div>
                <div class="col-md-8">
                    <ul class="header-middle-account">
                        <li><a href="@Url.Action("Account", "User")"><i class="icon-330" title="My account"></i> My account</a></li>
                        @if (User.Identity.IsAuthenticated)
                        {
                            <li>
                                <a href="@Url.Action("Logout", "User")">
                                    <i class="icon-351" title="Login"></i> Logout
                                </a>
                            </li>
                        }
                        else
                        {
                            <li><a href="@Url.Action("Login","User")"><i class="icon-351" title="Login"></i> Login</a></li>
                        }
                    </ul>
                </div>
                <div class="clear"></div>
            </div>
            <div class="menu">
                <div class="search-cart">
                    <form class="search">
                        <input type="text" class="search-line" placeholder="Search" name="serch" />
                        <input type="submit" value="" class="search-button" />
                    </form>

                    @{
                        Html.RenderAction("Cart", "Home");
                    }
                    <div class="clear"></div>
                </div>
                <div class="repsonsive-menu"><i class="icon-406" title="406"></i> Menu</div>
                <ul>
                    <li class="menu-item-has-children active"><a href="@Url.Action("Index","Home")">Home</a></li>
                    <li><a href="@Url.Action("Categories","Home")">Categories</a></li>

                    <li class="menu-item-has-children">
                        <a href="#">Pages</a>
                        <ul>
                            <li><a href="@Url.Action("About","Home")">About Us</a></li>
                            <li><a href="@Url.Action("Register","User")">Register page</a></li>
                        </ul>
                    </li>
                    <li><a href="@Url.Action("Contact","Home")">Contact</a></li>
                </ul>
                <div class="clear"></div>
            </div>
        </div>
    </div>




    <div class="content">

        @{
            Html.RenderAction("Slider", "Home");
        }

        @{
            Html.RenderAction("NewProducts", "Home");
        }

        @RenderBody()

        @{
            Html.RenderAction("Services", "Home");
        }
        
        @{
            Html.RenderAction("Brands", "Home");
        }

    </div>
   

   
    <script src="/Content/Zeon/js/modernizr.custom.63321.js" type="text/javascript"></script>
    <script src="/Content/Zeon/js/jquery-1.10.0.min.js" type="text/javascript"></script>
    <script src="/Content/Zeon/js/jquery-ui.min.js" type="text/javascript"></script>
    <script src="/Content/Zeon/js/bootstrap.js" type="text/javascript"></script>
    <script src="/Content/Zeon/js/placeholder.js" type="text/javascript"></script>
    <script src="/Content/Zeon/js/imagesloaded.pkgd.min.js" type="text/javascript"></script>
    <script src="/Content/Zeon/js/masonry.pkgd.min.js" type="text/javascript"></script>
    <script src="/Content/Zeon/js/jquery.swipebox.min.js" type="text/javascript"></script>
    <script src="/Content/Zeon/js/farbtastic/farbtastic.js" type="text/javascript"></script>
    <script src="/Content/Zeon/js/options.js" type="text/javascript"></script>
    <script src="/Content/Zeon/js/plugins.js" type="text/javascript"></script>
    <!--[if lt IE 9]>
      <script src="https://oss.maxcdn.com/libs/html5shiv/3.7.0/html5shiv.js"></script>
      <script src="https://oss.maxcdn.com/libs/respond.js/1.3.0/respond.min.js"></script>
    <![endif]-->
  
</body>


</html>