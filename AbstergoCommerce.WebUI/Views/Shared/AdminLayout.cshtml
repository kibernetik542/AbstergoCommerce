
@{
    Layout = null;
}
<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <meta name="description" content="">
    <meta name="author" content="Mosaddek">
    <meta name="keyword" content="FlatLab, Dashboard, Bootstrap, Admin, Template, Theme, Responsive, Fluid, Retina">
    <link rel="shortcut icon" href="img/favicon.png">

    <title>Abstergo Commerce - @ViewBag.Title</title>

    <!-- Bootstrap core CSS -->
    <link href="/Content/Admin/css/bootstrap.min.css" rel="stylesheet">
    <link href="/Content/Admin/css/bootstrap-reset.css" rel="stylesheet">
    <!--external css-->
    <link href="/Content/Admin/assets/font-awesome/css/font-awesome.css" rel="stylesheet" />
    <link href="/Content/Admin/assets/jquery-easy-pie-chart/jquery.easy-pie-chart.css" rel="stylesheet" type="text/css" media="screen" />
    <link rel="stylesheet" href="/Content/Admin/css/owl.carousel.css" type="text/css">
    <!-- Custom styles for this template -->
    <link href="/Content/Admin/css/style.css" rel="stylesheet">
    <link href="/Content/Admin/css/style-responsive.css" rel="stylesheet" />

   @RenderSection("head",false)
</head>

<body>

    <section id="container" >
        <!--header start-->
        <header class="header white-bg">
            <div class="sidebar-toggle-box">
                <div data-original-title="Toggle Navigation" data-placement="right" class="icon-reorder tooltips"></div>
            </div>
            <!--logo start-->
            <a href="/Admin/Index" class="logo">Abstergo<span>Commerce</span></a>
            <!--logo end-->
            <div class="nav notify-row" id="top_menu">
              
            </div>
            <div class="top-nav ">
                <!--search & user info start-->
                <ul class="nav pull-right top-menu">
                    <li>
                        <input type="text" class="form-control search" placeholder="Search">
                    </li>
                 
                </ul>
                <!--search & user info end-->
            </div>
        </header>
        <!--header end-->
        <!--sidebar start-->
        <aside>
            <div id="sidebar" class="nav-collapse ">
                <!-- sidebar menu start-->
                <ul class="sidebar-menu" id="nav-accordion">
                    <li>
                        <a class="active" href="@Url.Action("Index","Admin")">
                            <i class="icon-dashboard"></i>
                            <span>Homepage</span>
                        </a>
                    </li>
                    <li>
                        <a class="active" href="@Url.Action("Products","Admin")">
                            <i class="icon-picture"></i>
                            <span>Products</span>
                        </a>
                    </li>
                    <li>
                        <a class="active" href="@Url.Action("Categories","Admin")">
                            <i class="icon-food"></i>
                            <span>Categories</span>
                        </a>
                    </li>
                    <li>
                        <a class="active" href="@Url.Action("Brands","Admin")">
                            <i class="icon-certificate"></i>
                            <span>Brands</span>
                        </a>
                    </li>
                    <li>
                        <a class="active" href="@Url.Action("Customers","Admin")">
                            <i class="icon-user"></i>
                            <span>Customers</span>
                        </a>
                    </li>
                    <li>
                        <a class="active" href="@Url.Action("SliderImages","Admin")">
                            <i class="icon-film"></i>
                            <span>Slider Images</span>
                        </a>
                    <li class="sub-menu">
                        <a href="javascript:;">
                            <i class="icon-laptop"></i>
                            <span>Specification</span>
                        </a>
                        <ul class="sub">
                            <li><a href="@Url.Action("SpecTypes","Admin")">Types</a></li>
                            <li><a href="@Url.Action("Specifications","Admin")">Specifications</a></li>
                            <li><a href="@Url.Action("ProductSpecifications","Admin")">Product Specifications</a></li>
                        </ul>
                    </li>
                    </li>


                    <li class="sub-menu">
                        <a href="javascript:;">
                            <i class="icon-laptop"></i>
                            <span>Shopping</span>
                        </a>
                        <ul class="sub">
                            <li><a href="/Admin/CompletedOrders">Completed Orders</a></li>
                            <li><a href="/Admin/PendingOrders">Pending approval orders</a></li>
                            <li><a href="/Admin/CargoOrders">Cargo Orders</a></li>
                        </ul>
                    </li>

                    <li class="sub-menu">
                        <a href="javascript:;">
                            <i class="icon-book"></i>
                            <span>Reports</span>
                        </a>
                        <ul class="sub">
                            <li><a href="/Admin/ProductReports">Product Reports</a></li>
                            <li><a href="/Admin/SaleReports">Sale Reports</a></li>
                            <li><a href="/Admin/CustomerReports">Customer Reports</a></li>
                        </ul>
                    </li>

                </ul>
                <!-- sidebar menu end-->
            </div>
        </aside>
        <!--sidebar end-->
        <!--main content start-->
        <section id="main-content">
           @RenderBody()
        </section>
        <!--main content end-->
        <!--footer start-->
        
        <!--footer end-->
    </section>

    <!-- js placed at the end of the document so the pages load faster -->
    <script src="/Content/Admin/js/jquery.js"></script>
    <script src="/Content/Admin/js/jquery-1.8.3.min.js"></script>
    <script src="/Content/Admin/js/bootstrap.min.js"></script>
    <script class="include" type="text/javascript" src="/Content/Admin/js/jquery.dcjqaccordion.2.7.js"></script>
    <script src="/Content/Admin/js/jquery.scrollTo.min.js"></script>
    <script src="/Content/Admin/js/jquery.nicescroll.js" type="text/javascript"></script>
    <script src="/Content/Admin/js/jquery.sparkline.js" type="text/javascript"></script>
    <script src="/Content/Admin/assets/jquery-easy-pie-chart/jquery.easy-pie-chart.js"></script>
    <script src="/Content/Admin/js/owl.carousel.js"></script>
    <script src="/Content/Admin/js/jquery.customSelect.min.js"></script>
    <script src="/Content/Admin/js/respond.min.js"></script>

    <script class="include" type="text/javascript" src="/Content/Admin/js/jquery.dcjqaccordion.2.7.js"></script>

    <!--common script for all pages-->
    <script src="/Content/Admin/js/common-scripts.js"></script>

    <!--script for this page-->
    <script src="/Content/Admin/js/sparkline-chart.js"></script>
    <script src="/Content/Admin/js/easy-pie-chart.js"></script>
    <script src="/Content/Admin/js/count.js"></script>

    <script>

      //owl carousel

      $(document).ready(function() {
          $("#owl-demo").owlCarousel({
              navigation : true,
              slideSpeed : 300,
              paginationSpeed : 400,
              singleItem : true,
			  autoPlay:true

          });
      });

      //custom select box

      $(function(){
          $('select.styled').customSelect();
      });

    </script>

</body>
</html>

