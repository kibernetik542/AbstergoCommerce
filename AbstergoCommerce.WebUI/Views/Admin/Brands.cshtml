
@{
    ViewBag.Title = "Brands";
    Layout = "~/Views/Shared/AdminLayout.cshtml";
}

@section head{
<link href="~/Content/Admin/assets/fancybox/source/jquery.fancybox.css" rel="stylesheet" />
}

@model IEnumerable<AbstergoCommerce.WebUI.Models.Brand>

<section class="panel">
    <header class="panel-heading">
        Brands
    </header>
    <div class="panel-body">
        <div class="adv-table editable-table ">
            <br>
            <div class="clearfix">
                <div class="btn-group">
                    <a class="btn btn-primary" href="@Url.Action("CreateBrand","Admin")">
                        Add New Brand <i class="icon-plus"></i>
                    </a>
                </div>

            </div>
            <br>
            <div class="space15"></div>
            <table class="table table-striped table-hover table-bordered" id="editable-sample">
                <thead>
                    <tr>
                        <th>Brand Name</th>
                        <th>Description</th>
                        <th>Show image</th>
                        <th>Edit</th>
                        <th>Delete</th>
                    </tr>
                </thead>
                <tbody>
                    @foreach (var brand in Model)
                    {
                        <tr class="">
                            <td>@brand.Name</td>
                            <td>@brand.Description</td>
                          
                            <td>
                               @if (brand.Image != null)
                               {
                                <a class="fancybox" rel="group" href="@brand.Image.MedUrl">
                                    <i class="icon-eye-open"></i>
                                </a>
                               }
                            </td>
                            <td>
                                <a class="edit" href="/Admin/EditBrand/@brand.Id">
                                    <i class="icon-pencil"></i>
                                </a>
                            </td>
                            <td>
                                <a class="delete" href="/Admin/DeleteBrand/@brand.Id">
                                    <i class="icon-trash"></i>
                                </a>
                            </td>

                        </tr>
                    }

                </tbody>
            </table>
        </div>
    </div>
</section>

<script src="~/Content/Admin/assets/fancybox/source/jquery.fancybox.js"></script>
<script>
    $(function() {
        jQuery(".fancybox").fancybox();
    })
</script>