@model IEnumerable<AbstergoCommerce.WebUI.Models.SpecificationType>

<link href="~/Content/Admin/css/bootstrap.min.css" rel="stylesheet" />
<script src="~/Content/Admin/js/jquery-1.8.3.min.js"></script>
<script src="~/Content/Admin/js/bootstrap.min.js"></script>

<script>
    $("#types").change(function() {
        var id = $(this).val();
     
        $.ajax({
            type: "GET",
            url: "/Admin/ProdutSpecWidget",
            data: { typeId: id },
            success: function (datum) {
                $("#spec").html('');
                $("#spec").html(datum);
            },
            error: function() {
              
            }
        });
    });
</script>

<div class="form-group">
    <label class="col-lg-2 control-label">
        Spec type:
    </label>
    <div class="col-lg-10">
        <select class="form-control m-bot15" name="SpecTypeID" id="types">
            @foreach (var type in Model)
            {
                <option value="@type.Id">
                    @type.Name
                </option>
            }
        </select>
    </div>
</div>

