
@{
    ViewBag.Title = "Categories";
    Layout = "~/Views/Shared/AdminLayout.cshtml";
}

@model IEnumerable<AbstergoCommerce.WebUI.Models.Category>
    
<section class="panel">
    <header class="panel-heading">
        Categories
    </header>
    <div class="panel-body">
        <div class="adv-table editable-table ">
            <br>
            <div class="clearfix">
                <div class="btn-group">
                    <a class="btn btn-primary" href="@Url.Action("CreateCategory","Admin")">
                        Add New Category <i class="icon-plus"></i>
                    </a>
                </div>

            </div>
            <br>
            <div class="space15"></div>
            <table class="table table-striped table-hover table-bordered" id="editable-sample">
                <thead>
                    <tr>
                        <th>Category Name</th>
                        <th>Descrription</th>
                       
                        <th>Edit</th>
                        <th>Delete</th>
                    </tr>
                </thead>
                <tbody>
                    @foreach (var category in Model)
                    {
                        <tr class="">
                            <td>@category.Name</td>
                            <td>@category.Desciption</td>
                         
                         
                            <td>
                                <a class="edit" href="/Admin/CategoryEdit/@category.Id">
                                    <i class="icon-pencil"></i>
                                </a>
                            </td>
                            <td>
                                <a class="delete" href="/Admin/CategoryDelete/@category.Id">
                                    <i class="icon-trash"></i>
                                </a>
                            </td>

                        </tr>
                    }

                </tbody>
            </table>
        </div>
    </div>
</section>