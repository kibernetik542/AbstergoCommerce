
@{
    ViewBag.Title = "Products";
    Layout = "~/Views/Shared/AdminLayout.cshtml";
}

@model IEnumerable<AbstergoCommerce.WebUI.Models.Product>

<section class="panel">
    <header class="panel-heading">
      Products
    </header>
    <div class="panel-body">
        <div class="adv-table editable-table ">
            <br>
            <div class="clearfix">
                <div class="btn-group">
                    <a class="btn btn-primary" href="@Url.Action("Create","Admin")">
                       
                        Add New Product <i class="icon-plus"></i>
                    </a>
                </div>

            </div>
            <br>
            <div class="space15"></div>
            <table class="table table-striped table-hover table-bordered" id="editable-sample">
                <thead>
                <tr>
                    <th>Product Name</th>
                    <th>Description</th>
                    <th>Purchase Price</th>
                    <th>Price</th>
                    <th>Category Name</th>
                    <th>Creation Date</th>
                    <th>Brand Name</th>
                    <th>Expiration Date</th>
                    <th>Add Image</th>
                    <th>Edit</th>
                    <th>Delete</th>
                </tr>
                </thead>
                <tbody>
                @foreach (var product in Model)
                {
                    <tr class="">
                        <td>@product.Name</td>
                        <td>@product.Description</td>
                        <td>@product.PurchasePrice</td>
                        <td>@product.Price</td>
                        <td>@product.Category.Name</td>
                        <td>@product.DateCreated</td>
                        <td>@product.Brand.Name</td>
                        <td>@product.ExpirationDate</td>
                        <td>
                            <a class="delete" href="/Admin/ImageAdd/@product.Id">
                                <i class="icon-add"></i>
                            </a>
                        </td>
                        <td>
                            <a class="edit" href="/Admin/Edit/@product.Id">
                                <i class="icon-pencil"></i>
                            </a>
                        </td>
                        <td>
                            <a class="delete" href="/Admin/Delete/@product.Id">
                                <i class="icon-trash"></i>
                            </a>
                        </td>
                      
                    </tr>
                }

                </tbody>
            </table>
        </div>
    </div>
</section>