
@{
    ViewBag.Title = "Product Spec Create";
    Layout = "~/Views/Shared/AdminLayout.cshtml";
}
@model IEnumerable<AbstergoCommerce.WebUI.Models.Product>


<div class="row">
    <div class="col-lg-12">
        <section class="panel">
            <header class="panel-heading">
                Create product specification
            </header>
            <div class="panel-body">
                <form role="form" class="form-horizontal tasi-form" action="/Admin/ProductSpecCreate" method="POST">
                    <div class="form-group">
                        <label class="col-lg-2 control-label">
                            Product:
                        </label>
                        <div class="col-lg-10">
                            <select class="form-control m-bot15" name="Id">
                                @foreach (var prod in Model)
                                {
                                    <option value="@prod.Id">
                                        @prod.Name
                                    </option>
                                }
                            </select>
                        </div>
                    </div>

                    @{
                        Html.RenderAction("ProductSpecTypeWidget", "Admin");
                        Html.RenderAction("ProdutSpecWidget", "Admin");
                    }
                
                    <div class="form-group">
                        <div class="col-lg-offset-2 col-lg-10">
                            <button class="btn btn-success" type="submit">Create</button>
                        </div>
                    </div>
                </form>
            </div>
        </section>
    </div>
</div>
